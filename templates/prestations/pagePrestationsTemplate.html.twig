
{% extends('base.html.twig') %}

    {% block content %}
<section class="pt-0 bg-light">
    <div class="container">
        <div class="row" >
            <div class="col-xl-10 bg-light">
                <section class="p-t-100 pb-0 bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="heading-text heading-gradient"  data-animate="fadeInUp" data-animate-delay="0" >
                                    <h2><span>{% block prestation_title %} {% endblock %}</span></h2>
                                    <p>{% block prestation_description %}{% endblock %}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="bg-light">
                    <div class="container"  data-animate="fadeInUp" data-animate-delay="0">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="heading-text heading-gradient"  data-animate="fadeInUp" data-animate-delay="0" >
                                    <h4><span>Comment ça fonctionne ?</span></h4>
                                    <p>{% block fonctionnement %} {% endblock %}</p>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="image vertical-align">
                                    <img src="{% block image_asset %}{% endblock %}">
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="d-xl-none d-lg-block pb-0 bg-light">
                    <div class="container">
                        <div class="heading-text heading-gradient"  data-animate="fadeInUp" data-animate-delay="0" >
                            <h4><span>Quels sont les avantages de cette prestation ?</span></h4>
                        </div>
                        <div class="row">
                            {% block avantage %}
                            {% endblock %}
                        </div>
                    </div>
                </section>


                <section class="p-t-100 pb-0 bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="heading-text heading-gradient"  data-animate="fadeInUp" data-animate-delay="0" >
                                    <h2><span>Qui peut bénéficier de ce type de travaux ?</span></h2>
                                </div>
                            </div>
                        </div>
                        <div class="row text-center">
                            {% block beneficiaire %}
                            {% endblock %}
                        </div>
                    </div>
                </section>

                {% block avantageSection %}

                {% endblock %}
            </div>
            <div class="sidebar col-lg-2 d-none d-xl-block avantages text-light pb-3" >
                <div class="theiaStickySidebar pt-3">
                    <div class="widget">
                        <h3 class=" text-center heading mb-0 pb-5"><b>Avantages de cette prestation</b> </h3>
                        <div class="row">
                            {{ block('avantage') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

        <script defer>
            $(window).scroll(function(){
                $('.col-xl-10').css('min-height',$('.sidebar').height())
            })




        </script>




            {% endblock %}
