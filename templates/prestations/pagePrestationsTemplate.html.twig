
{% extends('base.html.twig') %}

    {% block content %}


        <section class="p-t-100 pb-0">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="heading-text heading-gradient"  data-animate="fadeInUp" data-animate-delay="0" >
                            <h2><span>{% block prestation_title %} {% endblock %}</span></h2>
                            <p>{% block prestation_description %}{% endblock %}</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="container"  data-animate="fadeInUp" data-animate-delay="0">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="heading-text heading-gradient"  data-animate="fadeInUp" data-animate-delay="0" >
                            <h4><span>Comment ça fonctionne ?</span></h4>
                            <p>{% block fonctionnement %} {% endblock %}</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="image vertical-align">
                            <img src="{% block image_asset %}{% endblock %}">
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="pb-0">
            <div class="container">
                <div class="heading-text heading-gradient"  data-animate="fadeInUp" data-animate-delay="0" >
                    <h4><span>Quels sont les avantages ?</span></h4>
                </div>
            </div>
        </section>

        <section>
            <div class="container">
                <div class="row text-center">

                    <div class="col-lg-3"  data-animate="fadeInUp" data-animate-delay="0" >
                        <div class="icon-box mb-0">
                            {% block a_icon %} {% endblock %}
                        </div>
                        <h3>{% block a %} {% endblock %}</h3>
                        <p>{% block a_desc %}{% endblock %}</p>
                    </div>

                    <div class="col-lg-3"  data-animate="fadeInUp" data-animate-delay="0" >
                        <div class="icon-box mb-0">
                            {% block b_icon %}{% endblock %}
                        </div>
                        <h3>{% block b %} {% endblock %}</h3>
                        <p>{% block b_desc %}{% endblock %}</p>
                    </div>
                    <div class="col-lg-3"  data-animate="fadeInUp" data-animate-delay="0" >
                        <div class="icon-box mb-0">
                            {% block c_icon %}{% endblock %}
                        </div>
                        <h3>{% block c %} {% endblock %}</h3>
                        <p>{% block c_desc %}{% endblock %}</p>
                    </div>
                    <div class="col-lg-3"  data-animate="fadeInUp" data-animate-delay="0" >
                        <div class="icon-box mb-0">
                            {% block d_icon %}{% endblock %}
                        </div>
                        <h3>{% block d %} {% endblock %}</h3>
                        <p>{% block d_desc %}{% endblock %}</p>
                    </div>
                    <div class="col-lg-3"  data-animate="fadeInUp" data-animate-delay="0" >
                        <div class="icon-box mb-0">
                            {% block e_icon %}{% endblock %}
                        </div>
                        <h3>{% block e %} {% endblock %}</h3>
                        <p>{% block e_desc %}{% endblock %}</p>
                    </div>

                    <div class="col-lg-3"  data-animate="fadeInUp" data-animate-delay="0" >
                        <div class="icon-box mb-0">
                            {% block f_icon %}{% endblock %}
                        </div>
                        <h3>{% block f %} {% endblock %}</h3>
                        <p>{% block f_desc %}{% endblock %}</p>
                    </div>
                    <div class="col-lg-3"  data-animate="fadeInUp" data-animate-delay="0" >
                        <div class="icon-box mb-0">
                            {% block g_icon %}{% endblock %}
                        </div>
                        <h3>{% block g %} {% endblock %}</h3>
                        <p>{% block g_desc %}{% endblock %}</p>
                    </div>

                    <div class="col-lg-3"  data-animate="fadeInUp" data-animate-delay="0" >
                        <div class="icon-box mb-0">
                            {% block h_icon %}{% endblock %}
                        </div>
                        <h3>{% block h %} {% endblock %}</h3>
                        <p>{% block h_desc %}{% endblock %}</p>

                    </div>
                </div>
            </div>
        </section>

        <section class="p-t-100 pb-0">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="heading-text heading-gradient"  data-animate="fadeInUp" data-animate-delay="0" >
                            <h2><span>Qui peut bénéficier de ce type de travaux ?</span></h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="row text-center">
                    {% block beneficiaire %}
                    {% endblock %}
                </div>
            </div>
        </section>

        <section class="p-t-100 pb-0">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="heading-text heading-gradient"  data-animate="fadeInUp" data-animate-delay="0" >
                            <h2><span>Avantages de cette prestation </span></h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="row text-center">
                    {% block avantage %}
                    {% endblock %}
                </div>
            </div>
        </section>

    {% endblock %}
